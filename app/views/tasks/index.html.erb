<%= link_to 'New Task', new_task_path, class: 'ui button'%>
<% @tasks.each do |task| %>
  <%= task.body %>
  <%= link_to 'Show', task, class: 'ui button' %>
  <%= link_to 'Edit', edit_task_path(task), class: 'ui button' %>
  <%= link_to 'Delete', task_path, {method: :delete, class: 'ui red button'} %>
<% end %>